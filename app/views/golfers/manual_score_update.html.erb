		<div class= "mainBG col-sm-5">
			<div class= "row">
				<div class= "text-left col-sm-12"><h4>Update Golfer Score</h4></div>
			</div>
			<br/>
			<%= form_for :golfer, url: golfer_score_update_manually_path, html: { method: :post, :role => "form", :class => "form-inline" } do %>
			<% @golfers.each do |golfer| %>
				<div class= "row">    
					<div class= "text-left col-sm-5">       
						<%= golfer.full_name%>
					</div>
					<%= fields_for "golfer[]", golfer do |golfer_fields| %>
					<div class= "text-left col-sm-2">
						<%= golfer_fields.text_field :score, :class => "form-control", :id => "score" %></p>
					</div>
					<div class= "text-left col-sm-2">
						<%= golfer_fields.text_field :thru, :class => "form-control", :id => "thru" %></p>
					</div>
					<div class= "text-left col-sm-2">
						<%= golfer_fields.text_field :web_id, :class => "form-control", :id => "web_id" %></p>
					</div>
					<%end%>
				</div>
			<% end %>
				
			<%= submit_tag 'Update', :class => "btn btn-primary" %>
			<% end %>
		</div>

