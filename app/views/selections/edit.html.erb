					<%end%>
				</div>
			</div>
			<div class= "row">    
				<div class= "text-left col-sm-12">Current Selection: <b><%=@selected.golfer.full_name %></b></div>
			</div>
      
			<div class= "row">    
				<div class= "text-left col-sm-12"><hr/></div>
			</div>
			<%= form_tag selection_path(current_user, :select_count => session[:select_count]), :method => :put do %>
				  <%= render :partial => 'form' %>
				  <%= submit_tag "Change", :class => "btn btn-primary"  %>
			<% end %>
    		</div>





