	<div class= "mainBG col-sm-5">
			<div class= "row">
				<div class= "text-left col-sm-12"><h4>Invite Friend(s) to Fantasy Golf Majors</h4></div>
			</div>
			
			<div class= "row">
 			   <div class= "text-left col-sm-12">
				   <% if resource.errors.any? %>
					   <div class= "alert alert-danger">
				   		<%= render 'layouts/error_messages', object: resource %>
		   			   </div>
	   			   <%end%>
			   </div>
			</div>
			<%= form_tag(send_mail_path) do %>
				<% if !@group.blank? %>
					<%= hidden_field_tag 'group', @group.id %>
				<% end %>
		            <div class="form-group">
		                <%= label_tag 'name', 'Your Name' %>
                		<%= text_field_tag 'name', current_user.full_name, class: 'form-control' %>
            		    </div>
		            <div class="form-group">
		                <%= label_tag 'email', 'Your Email' %>
                		<%= text_field_tag 'email', current_user.email, class: 'form-control' %>
            		    </div>
		           <div class="form-group">
               			<%= label_tag 'sendto', 'Send to' %>
               			<%= email_field_tag 'sendto', nil, class: 'form-control', placeholder: 'Friend(s) Email Address (separated by comma)' %>
           		   </div>
           		<div class="form-group">
               			<%= label_tag 'body', 'Body' %>
				<%= text_area_tag 'body', "This message is from #{current_user.full_name} who is inviting you to play Fantasy Golf Majors on fantasygolfmajors.com.

Win Cash with a $10 entry fee or Play for Free.

http://fantasygolfmajors.com

<Add Your Own Message Here>
				
", class: 'form-control', rows: 10 %>
           		</div>
           		<%= submit_tag "Send", class: 'btn btn-primary' %>
       		<% end %>

	</div>
