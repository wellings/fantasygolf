		<div class= "mainBG col-sm-5">
			<div class= "row">
				<div class= "text-left col-sm-12"><h4>Tournaments</h4></div>
			</div>
			<div class= "row">    
				<div class= "col-sm-12"><%= link_to 'New tournament', new_tournament_path %></div>
			</div>
			<br/>
			<% @tournaments.each do |tournament| %>
				<div class= "row">    
					<div class= "text-left col-sm-6">       
						<%= tournament.name%>
					</div>
					<div class= "text-left col-sm-6"><%= link_to 'Edit', edit_tournament_path(tournament) %> | 
						<%= link_to 'Delete', tournament_path(tournament), :method => :delete,  data: { confirm: 'Are you sure?' } %> | 
						<% if tournament.active == true %>
							Active
						<% else %>
							<%= link_to 'Activate', tournament_activate_path(tournament) %>
						<% end %> | 	
						<% if tournament.locked == true %>
							Locked
						<% else %>
							<%= link_to 'Lock', tournament_locked_path(tournament) %>
						<% end %>	
					</div>
				</div>
			<% end %>
		</div>
